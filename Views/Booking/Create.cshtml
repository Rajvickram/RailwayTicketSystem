@model RailwayTicketSystem.Models.Booking
@{
    ViewData["Title"] = "Book Ticket";
}

<h2>Book Train Ticket</h2>

<form asp-action="Create" method="post">
    <div class="mb-3">
        <label asp-for="FromLocation" class="form-label"></label>
        <input asp-for="FromLocation" class="form-control" />
        <span asp-validation-for="FromLocation" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="ToLocation" class="form-label"></label>
        <input asp-for="ToLocation" class="form-control" />
        <span asp-validation-for="ToLocation" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="DateOfJourney" class="form-label"></label>
        <input asp-for="DateOfJourney" class="form-control" type="date" />
        <span asp-validation-for="DateOfJourney" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Seats" class="form-label"></label>
        <input asp-for="Seats" class="form-control" type="number" />
        <span asp-validation-for="Seats" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Book Now</button>
</form>
