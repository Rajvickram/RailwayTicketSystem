@{
    Layout = "~/Views/Shared/MinimalLayout.cshtml"; // âœ… This line activates the clean layout
    ViewData["Title"] = "Login";
}

<h2 class="text-center mb-4">Login</h2>
<div class="container">
    <div class="row">
        <div class="col-md-6">
            <img src="~/images/LoginTrain.png" alt="LoginTrain" class="img-fluid w-100 h-100">
        </div>
        <div class="col-md-6">
            <form asp-action="Login" method="post" class="w-50">
                <div class="form-group mb-3">
                    <label>Email</label>
                    <input type="email" name="email" class="form-control" required />
                </div>
                <div class="form-group mb-3">
                    <label>Password</label>
                    <input type="password" name="password" class="form-control" required />
                </div>

                <div class="text-danger">@ViewBag.Error</div>

                <button type="submit" class="btn btn-primary w-100">Login</button>

                <div class="mt-3 text-center">
                    <p>New User? <a asp-action="Signup">Signup here</a></p>
                </div>
            </form>
        </div>
    </div>
</div>