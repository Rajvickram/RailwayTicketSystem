<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - RailwayTicketSystem</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/RailwayTicketSystem.styles.css" asp-append-version="true" />
</head>

<body>
    <!-- Background image and navbar wrapper -->
    <div class="hero-section ">
        <!-- Background Image -->
        @* <img src="~/images/TrainStation.jpeg" alt="TrainStation" class="background-image" /> *@

        <!-- Navbar on top of image -->
        <header class="overlay-navbar">
            <nav class="navbar navbar-dark bg-transparent navbar-expand-lg mt-4 w-75 mx-auto rounded-5" id="navbarBg">
                <div class="container">
                    <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                        <img src="~/images/images.jpeg" alt="Logo" asp-append-version="true" class="Logo" />
                    </a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navBtn"
                        aria-controls="navBtn" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navBtn">
                        <ul class="navbar-nav ms-auto gap-4">
                            <li class="nav-item">
                                <a class="nav-link fs-5" asp-area="" asp-controller="Home" asp-action="Index">HOME</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link fs-5" asp-area="" asp-controller="Home" asp-action="Privacy">PRIVACY</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link fs-5" asp-area="" asp-controller="Home" asp-action="Contact">CONTACT</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link fs-5" asp-area="" asp-controller="Home" asp-action="ContactUs">CONTACT US</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
        </header>
    </div>

    <!-- Main content section -->
    <div class="container mt-5">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- Footer -->
    <footer class="footer bg-secondary rounded-5 mx-auto">
        <div class="container">
            &copy; 2025 - RailwayTicketSystem -
            <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
